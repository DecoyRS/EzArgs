<idea-plugin>
    <id>com.github.decoyrs.ezargs</id>
    <name>EzArgs</name>
    <vendor>decoyrs</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.rider</depends>
    <depends>com.jetbrains.rider-cpp</depends>

    <actions>
        <action id="ArgumentsInputFieldAction"
                class="com.github.decoyrs.ezargs.actions.ArgumentsInputField" text="Add commandline arguments">
          <add-to-group group-id="NavBarToolBar" />
        </action>
    </actions>
    <extensions  defaultExtensionNs="com.jetbrains.rider-cpp">
        <run.configurations.cpp implementation="com.github.decoyrs.ezargs.services.EzArgsCppConfigurationParametersExtension"/>
    </extensions>
</idea-plugin>
